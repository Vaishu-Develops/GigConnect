# Vercel Environment Variables
# Copy these to your Vercel dashboard under Settings > Environment Variables

# MongoDB Connection
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/gigconnect

# JWT Secret
JWT_SECRET=your_super_secret_jwt_key_here_minimum_32_characters

# Razorpay Configuration
RAZORPAY_KEY_ID=rzp_test_your_key_id
RAZORPAY_KEY_SECRET=your_razorpay_secret_key

# Frontend API URL (will be set to your Vercel domain)
VITE_API_URL=https://gig-connect.vercel.app/api

# Node Environment
NODE_ENV=production

# CORS Origin (your Vercel domain)
CORS_ORIGIN=https://gig-connect.vercel.app