{
  "version": 2,
  "builds": [
    {
      "src": "frontend/gigconnect-frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "backend/api/index.js",
      "use": "@vercel/node",
      "config": {
        "maxDuration": 30
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/backend/api/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/gigconnect-frontend/dist/index.html"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}