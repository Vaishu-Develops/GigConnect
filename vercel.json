{
  "buildCommand": "cd frontend/gigconnect-frontend && npm ci && npm run build",
  "outputDirectory": "frontend/gigconnect-frontend/dist",
  "installCommand": "npm install --prefix frontend/gigconnect-frontend",
  "functions": {
    "backend/api/index.js": {
      "runtime": "nodejs18.x"
    }
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/backend/api/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/gigconnect-frontend/dist/index.html"
    }
  ]
}